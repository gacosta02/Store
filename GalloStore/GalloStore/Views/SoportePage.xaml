<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:CM="http://schemas.openxmlformats.org/markup-compatibility/2006"
             CM:Ignorable="d"
             x:Class="GalloStore.Views.SoportePage"
             Title="Soporte">
    <ContentPage.Content>
        <StackLayout>

            <Image Source="logo.png" HorizontalOptions="Center" 
                   HeightRequest="100"
                   WidthRequest="200"
                   Margin="0,30,0,0"/>

            <Label Text="~Comunicate con nosotros~"
               TextColor="DodgerBlue"
               TextDecorations="Underline"
               HorizontalOptions="Center"
               Margin="30,0,20,2"
               FontSize="Title"/>
            
            <Label Text="Comunicate con nosotros a traves de nuestro correo y cuentanos tu inquietud para poderte ayudar."
               HorizontalOptions="Center" TextColor="Gray" Margin="20,0,0,15"/>

            

            <Editor Text="GalloStore2@gmail.com" x:Name="EntryEMail"/>
            <Entry Placeholder="Asunto" x:Name="EntryAsunto" />
            <Button Text="Enviar" Clicked="Button_Clicked" BackgroundColor="#2196F3" Margin="20,0,20,0" CornerRadius="10" />


        </StackLayout>
    </ContentPage.Content>
</ContentPage>