<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="GalloStore.Views.CatalogoPage"
             Title="Catalogo"
             x:Name="CatPage">

    <ContentPage.Content>

        <ScrollView>

            <Grid HorizontalOptions="FillAndExpand" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Frame Grid.Row="0" Padding="10" Margin="10" HasShadow="True" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">


                    <CollectionView ItemsSource="{Binding catalogo}"  
                                    HeightRequest="250" x:Name="colletion">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" Span="1" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="220"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <Image Grid.Row="0" Source="{Binding Picture}" HeightRequest="200"/>
                                    <StackLayout Grid.Row="1"  HorizontalOptions="Center" Orientation="Horizontal">
                                        <Label Text="Nombre: "  TextColor="Black" FontAttributes="Bold"/>
                                        <Label Text="{Binding Name}"  TextColor="Black"/>
                                    </StackLayout>
                                    <StackLayout  Grid.Row="2" HorizontalOptions="Center" Orientation="Horizontal">
                                        <Label Text="Precio: "  TextColor="Black" FontAttributes="Bold"/>
                                        <Label Text="{Binding Price}"  TextColor="Black"/>
                                    </StackLayout>
                                    <Grid Grid.Row="3" HorizontalOptions="FillAndExpand" ColumnSpacing="0" RowSpacing="0">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>



                                        <StackLayout Grid.Column="3" Background="#9C2424" HeightRequest="40" HorizontalOptions="CenterAndExpand" Margin="0,0,90,20" Orientation="Horizontal">
                                            <Button Grid.Column="3"   Text="Agregar al Carrito" TextColor="White" HeightRequest="40" BackgroundColor="#9C2424" HorizontalOptions="CenterAndExpand" 
                                                    Command="{Binding AgregarCommand, Source={x:Reference CatPage}}"
                                                    CommandParameter="{Binding .}"/>  
                                        </StackLayout>



                                    </Grid> 
                                </Grid>
                            </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    


                </Frame>

            </Grid>

        </ScrollView>

    </ContentPage.Content>

</ContentPage>